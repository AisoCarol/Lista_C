/* Ler um número e imprimir se ele é igual a 5, a 200, a 400, se está no intervalo
de 500 e 1000, inclusive, ou e ele está fora dos escopos anteriores. */
// Por Carol Aisó 05/03/2018

#include <stdio.h>
#include <stdlib.h>
#include <locale.h>
#include <conio.h>

int main()
{
    int num;

    printf("\n____________________________________________\n");
    printf("\n******ENCONTRANDO NÚMEROS ESPECÍFICOS*******\n",setlocale(LC_ALL,""));
    printf("\n____________________________________________\n\n");

    printf("\n Digite um Número: \n");
    scanf("%d",&num);

    if (num=5){

        printf("\n Você Digitou o Número 5 \n");
    }
        else{
            if (num=200){

                printf("\n Você Digitou o Número 200 \n");
            }
        }
    if (num>499 && num < 1001){

        printf("\n Número está entre 500 e 1000\n");
    }
        else{

            printf("\n Número Fora dos Escopos\n");
        }
    return 0;
}
